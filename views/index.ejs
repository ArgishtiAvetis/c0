<% include partials/header.ejs %>

  <!-- intro row -->
  <div class="row text-center intro-row">
    <div class="col-md-12">
      <h1 id="intro-slogan" class="intro-text animated bounceInLeft">World's First Crowdthinking Platform</h1>
      <h1 id="intro-hook" class="intro-text animated bounceInRight">Changing the World One Challange at a Time</h1>
      <span class="intro-text " id="intro-join">Join the community of intellectuals</span>
      <a href="/signup" class="btn btn-intro-join">Become a Thinker</a>
    </div>
  </div>


<!-- Lights -->


<div class="row homepage-categories-row">
	<div class="container">
		<section class="col-md-12">
			<h2 class="homepage-category-title">
			<a href="">
				<img src="/img/icons/light.png" alt="Light" class="img-responsive type-icon" />
				Light
			</a>
			</h2>
			<span>Campaigns for creative and original ideas.</span>
			<hr>
		</section>
		<% for(let i = 0; i < lights.length; i++) { %>
			<section class="col-sm-6 col-lg-3">
				<div class="item item-category">
					<a href="/c/<%= lights[i].slug %>"><img src="/uploads/c/<%= lights[i].img0 %>" alt="<%= lights[i].title %>" class="img-responsive"></a>
					<div class="item-descr">
						<h1 class="thumbnail-title"><a href="/c/<%= lights[i].slug %>"><%= lights[i].title %></a>  <br /><span class="badge">15 Ideas</span></h1>
						<p><%= lights[i].overview %></p>
						<!-- <h3 class="thumbnail-by">by <a href="<%= lights[i].author_id %>"><%= %> -->
						</a></h3>
						<span class="item-reward">
						<b>Reward: </b><%= lights[i].reward %>
						</span>

						<div class="progress">
							<div class="progress-bar progress-bar-success"  role="progressbar" aria-valuenow="70"
							  aria-valuemin="0" aria-valuemax="100" style="width:70%">
								<span class="sr-only">70% Complete</span>
							</div>

						</div>
						<span>33 days left</span>
            <br />
            <p class="thumb-in-cat text-center">In 
            <a href="/challenges/<%= lights[i].category.charAt(0).toLowerCase() + lights[i].category.slice(1) %>"><%= lights[i].category %></a></p>
					</div>

				</div>
			</section>
			<% } %>
			<section class="col-md-12 text-center col-view-all-category">
				<a href="/" class="btn btn-view-all-category">View All Light Challenges</a>
			</section>
	</div>
</div>

