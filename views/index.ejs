<!-- Categories -->
<% for(let i = 0; i < 3; i++) { %>
<div class="row homepage-categories-row">
	<div class="container">
		<section class="col-md-12">
			<h2 class="homepage-category-title"><a href="">Category</a></h2>
			<hr>
		</section>
		<% for(let i = 0; i < challenges.length; i++) { %>
			<section class="col-lg-3">
				<div class="item item-category">
					<img src="https://challer.co/img/upload/Tengu-pech-zariadnoe-ustroistvo-ecotechnica-com-ua-2.jpg" class="img img-responsive" alt="">
					<div class="item-descr">
						<h1 class="thumbnail-title"><a href="<%= challenges[i]._id %>"><%= challenges[i].title %></a> &nbsp;<span class="badge">15 Ideas</span></h1>
						<h3 class="thumbnail-by">by <a href="<%= challenges[i].author_id %>">Challanger Name</a></h3>
						<span class="item-reward">
						Reward:
							<span class="glyphicon glyphicon-usd"></span>25
						</span>

						<div class="progress">
							<div class="progress-bar progress-bar-success"  role="progressbar" aria-valuenow="70"
							  aria-valuemin="0" aria-valuemax="100" style="width:70%">
								<span class="sr-only">70% Complete</span>
							</div>

						</div>
						<span>33 days left</span>
            <br />
            <p class="thumb-in-cat">In <a href="<%= challenges[i].category %>"><%= challenges[i].category %></a></p>
					</div>

				</div>
			</section>
			<% } %>
			<section class="col-md-12 text-center col-view-all-category">
				<a href="/" class="btn btn-view-all-category">View All in This Category</a>
			</section>
	</div>
</div>
<% } %>

