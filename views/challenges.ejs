<% include partials/header.ejs %>

<!-- filters row -->
<div class="row text-center filters-row">
	<div class="col-md-12">
		<h1>Filter Challenges By Type and Category</h1>
	</div>
	<div class="col-md-12 filters-div">
		<form class="form-inline" action="/challenges" method="get">
			<div class="form-group choose-category">

				<select name="category" class="selectpicker form-control" data-live-search="true">
					<option value="">All Categories</option>
					  <optgroup label="Arts &amp; Crafts">
			            <option value="Art">Art</option>
			            <option value="Architecture">Architecture</option>
			            <option value="Music">Music</option>
			            <option value="Photography">Photography</option>
			            <option value="Writing-Publishing">Writing &amp; Publishing</option>
			            <option value="TV Shows">TV Shows</option>
			            <option value="Filmmaking">Filmmaking</option>
			          </optgroup>
			          <optgroup label="Technology">
			            <option value="Apps">Apps</option>
			            <option value="Web">Web</option>
			            <option value="AI">AI</option>
			            <option value="VR-AI">VR &amp; AI</option>
			            <option value="Electronics">Electronics</option>
			            <option value="Accessories">Accessories</option>
			            <option value="Video Games">Video Games</option>
			          </optgroup>
			          <optgroup label="Society">
			            <option value="Education">Education</option>
			            <option value="Business">Business</option>
			            <option value="Environment">Environment</option>
			            <option value="Social Innovation">Social Innovation</option>
			          </optgroup>
				</select>
			</div>
			<div class="form-group choose-type">

				<select name="type" class="selectpicker form-control" data-live-search="true">
					<optgroup>
						<option value="">All Types</option>
						<option value="light">Light</option>
						<option value="teaser">Teaser</option>
						<option value="brainstorm">Brainstorm</option>
					</optgroup>
				</select>
			</div>
			<div class="form-group choose-type">

				<select name="sortBy" class="selectpicker form-control" data-live-search="true">
					<optgroup>
						<option value="">Sort By</option>
						<option>Category</option>
						<option>Category</option>
						<option>Category</option>
						<option>Category</option>
					</optgroup>
				</select>
			</div>
			<br />
			<div class="form-group">
				<button type="submit">UPDATE</button>
			</div>
		</form>
	</div>
</div>

<!-- filters row -->

<div class="row challenges">
	<% for(let i = 0, len = challenges.length; i < len; i++ ) { %>
			<section class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
				<div class="item">
					<img src="/uploads/c/<%= challenges[i].img0 %>" alt="<%= challenges[i].title %>" class="img-responsive" />
					<div class="item-descr">
						<h1 class="thumbnail-title"><a href="/c/<%= challenges[i].slug %>"><%= challenges[i].title %> &nbsp;<span class="badge">15 Ideas</span></a></h1>
						<h3 class="thumbnail-by">by <a href="/u/<%= challenges[i].author_id %>">Challanger Name</a></h3>
						<span class="item-reward">
						Reward:
							<span class="glyphicon glyphicon-usd"></span>25
						</span>

						<div class="progress">
							<div class="progress-bar" role="progressbar" aria-valuenow="70"
							  aria-valuemin="0" aria-valuemax="100" style="width:70%">
								<span class="sr-only">70% Complete</span>
							</div>

						</div>
						<span>33 days left</span>
						<p class="thumbnail-category">in <a href="/challenges/<%= challenges[i].category %>"><%= challenges[i].category %></a></p>
					</div>

				</div>
			</section>
			<% } %>

			<div class="col-md-12 text-center">

			</div>
</div>

<% include partials/footer.ejs %>
